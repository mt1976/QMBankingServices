SUBROUTINE ATTESTFILE(Path,Status)
* Test if file exists using AccuTerm Script
EQU ESC TO CHAR(27), STX TO CHAR(2), CR TO CHAR(13), EM TO CHAR(25)
SCR='On Error Resume Next'
SCR=SCR:EM:'X = 0'
SCR=SCR:EM:'X = Abs(FileExists("':Path:'"))'
SCR=SCR:EM:'InitSession.Output Cstr(X) & Chr$(13)'
PRINT ESC:STX:'P':SCR:CR:
ECHO OFF
PROMPT ''
INPUT Status:
PROMPT '?'
ECHO ON
RETURN
END