SUBROUTINE ATSETWINSTATE(SESSION.STATE, WINDOW.STATE)
* SETS ACCUTERM SESSION & MAIN WINDOW STATE
* 0 = NORMAL, 1 = MINIMIZED, 2 = MAXIMIZED
SCR = 'On Error Resume Next'
SCR = SCR : CHAR(25)
SCR = SCR : 'AccuTerm.WindowState = ' : WINDOW.STATE
SCR = SCR : CHAR(25)
SCR = SCR : 'InitSession.WindowState = ' : SESSION.STATE
PRINT CHAR(27) : CHAR(2) : 'P' : SCR : CHAR(13) :
RETURN
END
