SUBROUTINE ATTESTDIR(PATH,STAT)
* Test for valid directory using AccuTerm Script
EQU ESC TO CHAR(27), STX TO CHAR(2), CR TO CHAR(13), EM TO CHAR(25)
SCR='On Error Resume Next'
SCR=SCR:EM:'X=0'
SCR=SCR:EM:'X=GetAttr("':PATH:'")'
SCR=SCR:EM:'InitSession.Output CStr((X And 16) / 16) & Chr$(13)'
PRINT ESC:STX:'P':SCR:CR:
ECHO OFF
PROMPT ''
INPUT STAT:
PROMPT '?'
ECHO ON
RETURN
END
