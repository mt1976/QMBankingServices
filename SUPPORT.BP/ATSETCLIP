SUBROUTINE ATSETCLIP(CLIPTEXT)
* ROUTINE TO SET CLIPBOARD TEXT USING ACCUTERM
EQU AM TO CHAR(254)
EQU ESC TO CHAR(27), STX TO CHAR(2), CR TO CHAR(13), LF TO CHAR(10)
PRINT ESC : STX : 'CCR;' : CR :
N = DCOUNT(CLIPTEXT, AM)
FOR I = 1 TO N
PRINT CLIPTEXT<I> : CR : LF :
NEXT I
PRINT ESC : STX : 'CX' :
RETURN
END
