SUBROUTINE M.HEADER(TEXT)

   SCREEN.WIDTH = @CRTWIDE
   SPAN.WIDTH = SCREEN.WIDTH - 6
*   CALL M.CRT.ACTION("SCR.WIDTH",SCREEN.WIDTH)
*   CALL M.CRT.ACTION("SPAN",SPAN.WIDTH)

   BAR = STR("-",SPAN.WIDTH)

   STMT = "sh figlet -f cybermedium ":DQUOTE(TEXT)

   * HUSH ON
   EXECUTE STMT CAPTURING OUTPUT
   * HUSH OFF

   NO.ROWS = DCOUNT(OUTPUT,@FM)

   CALL M.CRT(BAR)
   FOR POS.ROW = 1 TO NO.ROWS
   CALL M.CRT(OUTPUT<POS.ROW>)
 NEXT POS.ROW
   CALL M.CRT(BAR)

   RETURN
END
