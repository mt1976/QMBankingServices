SUBROUTINE U_OS.EXECUTE(STMT, VERBOSE)

FN.UTIL.LOG.CMD = "UTIL.LOG.CMD" ; FV.UTIL.LOG.CMD = "" ; STOP.ON.ERROR = @TRUE ; ERROR.TEXT = ""
CALL U_OPENFILE(FN.UTIL.LOG.CMD, FV.UTIL.LOG.CMD, STOP.ON.ERROR, ERROR.TEXT)


   IF VERBOSE THEN
      CALL U_CRT.INFO("EXECUTE", STMT)
   END

   HUSH ON
   EXECUTE STMT
   HUSH OFF

   ID.UTIL.LOG.CMD = ""
   REQUEST.REC = ""
   REQUEST.REC<1> = STMT
   REQUEST.REC<2> = VERBOSE

   CALL U_UNIQUE.ID(ID.UTIL.LOG.CMD)
   CALL U_WRITE(FV.UTIL.LOG.CMD, "SELECT_":ID.UTIL.LOG.CMD, REQUEST.REC, STOP.ON.ERROR, ERROR.TEXT)

   RETURN
END
