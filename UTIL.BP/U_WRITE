$COPYRIGHT = "Copyright (C) 2019 Matt Townsend mt76@gmx.com"
*******************************************************************************

   * CALL U_CRT.ACTION("WRITE",ID.RECORD)
   WRITE R.RECORD TO FV.FILEVAR, ID.RECORD

   RETURN

END
