SUBROUTINE M.OPENFILE(FN.FILENAME, FV.FILEVAR, STOP.ON.ERROR, ERROR.TEXT)

** FN.PD = "PROCESS.DIR" ; F.PD = "" ; PD.ID = ""
OPEN FN.FILENAME TO FV.FILEVAR ELSE

   ERROR.TEXT = "Unable to Open [":FN.FILENAME:"]"
   LOGMSG ERROR.TEXT
   CALL M.CRT.ACTION("ERROR", ERROR.TEXT)
   IF STOP.ON.ERROR THEN
      STOP
   END
END

RETURN

END
