SUBROUTINE M.READ(FV.FILEVAR, ID.RECORD, R.RECORD ,STOP.ON.ERROR, ERROR.TEXT)

** FN.PD = "PROCESS.DIR" ; F.PD = "" ; PD.ID = ""

READ R.RECORD FROM FV.FILEVAR,ID.RECORD ELSE
   ERROR.TEXT = "Unable to read [":ID.RECORD:"]"
   LOGMSG ERROR.TEXT
   CALL M.CRT("ERROR", ERROR.TEXT)
   IF STOP.ON.ERROR THEN
      STOP
   END
END

RETURN

END
