SUBROUTINE M.STOP(PROGRAM.NAME)
   STMT = "COMO OFF"
   HUSH ON
   EXECUTE STMT
   HUSH OFF
   IF PROGRAM.NAME <> "" THEN
      FN.COMO = "$COMO" ; FV.COMO = "" ; STOP.ON.ERROR = @TRUE
      CALL M.OPENFILE(FN.COMO, FV.COMO, @TRUE, "")

      FN.UTIL.LOG = "UTIL.LOG" ; FV.UTIL.LOG = ""
      CALL M.OPENFILE(FN.UTIL.LOG, FV.UTIL.LOG, STOP.ON.ERROR, "")
      R.RECORD = ""
      CALL M.READ(FV.COMO, PROGRAM.NAME, R.RECORD, STOP.ON.ERROR, ERROR.TEXT)
      OUTPUT.NAME = PROGRAM.NAME:".log"
      CALL M.WRITE(FV.UTIL.LOG, OUTPUT.NAME, R.RECORD, STOP.ON.ERROR, ERROR.TEXT)
      CALL M.DELETE(FV.COMO, PROGRAM.NAME, STOP.ON.ERROR, ERROR.TEXT)
   END
   RETURN
END
